{
  "name": "CustomButtonYoutube",
  "version": "1.0.0",
  "manifest_version": 3,
  "description": "Youtube ytp-button customizer",
  "permissions": ["storage"],
  "options_page": "options.html",
  "content_scripts": [{
    "matches": ["https://www.youtube.com/*"],
    "run_at": "document_end",
    "css": ["assets/css/style.css"],
    "js": [
      "content.js"
    ]
  }]
}